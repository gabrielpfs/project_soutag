# EditorConfig helps developers define and maintain consistent coding styles.
# See: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Python source, tests, and notebooks (via percent scripts)
[*.{py,pyw}]
indent_size = 4
max_line_length = 88

[notebooks/**.py]
indent_size = 4
max_line_length = 88

# SQL files for MySQL migrations/queries
[*.sql]
indent_size = 2

# Markdown / docs
[*.{md,MD}]
trim_trailing_whitespace = false
max_line_length = off

# JSON / YAML / TOML configuration
[*.{json,yml,yaml,toml}]
indent_size = 2

# Power BI artifacts (treat as binary, editor rules mostly irrelevant)
[*.{pbix,pbit}]
end_of_line = lf
insert_final_newline = false